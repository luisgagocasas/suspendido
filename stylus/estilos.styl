@css {
/*  CSS3 Clases - Luis Gago Casas */
}
@import 'nib/vendor'
vendor-prefixes = o ms moz webkit
@font-face
	font-family 'Open Sans'
	font-style normal
	font-weight 400
	src local('Open Sans'), local('Open Sans'), url("../fonts/opensans.woff") format('woff')
@font-face
	font-family 'Josefin Slab'
	font-style normal
	font-weight 400
	src local('Josefin Slab'), local('JosefinSlab'), url("../fonts/Josefin_Slab.woff") format('woff')
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	ms-border-radius arguments
	o-border-radius arguments
	border-radius arguments
appearance()
	-webkit-appearance arguments
	-moz-appearance arguments
	ms-appearance arguments
	o-appearance arguments
	appearance arguments
box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	ms-box-shadow arguments
	o-box-shadow arguments
	box-shadow arguments
transform()
	-webkit-transform arguments
	-moz-transform arguments
	ms-transform arguments
	o-transform arguments
	transform arguments
transition()
	-webkit-transition arguments
	-moz-transition arguments
	ms-transition arguments
	o-transition arguments
	transition arguments
zoom()
	-ms-zoom arguments
	-webkit-zoom arguments
	zoom arguments
background-size()
	-webkit-background-size arguments
	-moz-background-size arguments
	ms-background-size arguments
	o-background-size arguments
	background-size arguments
body
	background-color #45505c
	color #FFF
	font-family 'Open Sans',Arial,Sans-serif;
	font-size 16px
*
	margin 0
a
	color #FFF
	text-decoration none
ul
	margin 0px
	padding 0px 0px 0px 15px
li
	list-style none
.wrapper
	margin 0 auto
	position relative
h1
	background-color #000
h2
	background #121212
h3
	background-color  #272727
//Comunes
.center
	text-align center
.contenido
	bottom 50%
	height 80px
	left 0
	margin auto
	position absolute
	right 0
	top 50%
	width auto
.mensaje, .error404
	color #fff
	font-size 8em
	margin: -85px auto 0px auto
	text-shadow 1px 1px 5px #000